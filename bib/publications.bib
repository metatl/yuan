	pages = {1199--1214},
	file = { J Atmos Ocean Tech 2007 Kollias.pdf:/Users/tyuan/Zotero/storage/NYKUHDC6/J Atmos Ocean Tech 2007 Kollias.pdf:application/pdf},
}

@article{johnsonTrimodalCharacteristicsTropical1999,
	title = {Trimodal characteristics of tropical convection},
