@article{jiangAerosolCORelationshipAerosol2009,
	title = {Aerosol-{CO} relationship and aerosol effect on ice cloud particle size: {Analyses} from {Aura} {Microwave} {Limb} {Sounder} and {Aqua} {Moderate} {Resolution} {Imaging} {Spectroradiometer} observations},
