	author = {Ferrier, B S and Simpson, J and Tao, W K},
	year = {1996},
	pmid = {A1996VL88800002},
	pages = {2100--2125},
}

@article{takemiSensitivitySqualllineIntensity2007,
	title = {A sensitivity of squall-line intensity to environmental static stability under various shear and moisture conditions},
