@article{parkLongTermTrendsAerosols2024,
	title = {Long‐{Term} {Trends} in {Aerosols}, {Low} {Clouds}, and {Large}‐{Scale} {Meteorology} {Over} the {Western} {North} {Atlantic} {From} 2003 to 2020},
