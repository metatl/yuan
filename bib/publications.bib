	author = {Koren, Ilan and Remer, Lorraine A and Kaufman, Yoram J and Rudich, Yinon and Martins, J Vanderlei},
	year = {2007},
	pmid = {000245951000004},
	pages = {L08805},
}

@article{jenkinsSpaceborneObservationsLink2004,
	title = {Space-borne observations link the tropical atlantic ozone maximum and paradox to lightning},
