@article{wangModelingMesoscaleCellular2009,
	title = {Modeling {Mesoscale} {Cellular} {Structures} and {Drizzle} in {Marine} {Stratocumulus}. {Part} {II}: {The} {Microphysics} and {Dynamics} of the {Boundary} {Region} between {Open} and {Closed} {Cells}},
