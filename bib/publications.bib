@article{jiangSimulationsAerosolclouddynamicalFeedbacks2002,
	title = {Simulations of aerosol-cloud-dynamical feedbacks resulting from entrainment of aerosol into the marine boundary layer during the {Atlantic} {Stratocumulus} {Transition} {Experiment}},
