	author = {Hu, Yongxiang and Winker, David and Vaughan, Mark and Lin, Bing and Omar, Ali and Trepte, Charles and Flittner, David and Yang, Ping and Nasiri, Shaima L and Baum, Bryan and Sun, Wenbo and Liu, Zhaoyan and Wang, Zhien and Young, Stuart and Stamnes, Knut and Huang, Jianping and Kuehn, Ralph and Holz, Robert},
	year = {2009},
