@article{leonClimatologyDrizzleMarine2008,
	title = {Climatology of drizzle in marine boundary layer clouds based on 1 year of data from {CloudSat} and {Cloud}-{Aerosol} {Lidar} and {Infrared} {Pathfinder} {Satellite} {Observations} ({CALIPSO})},
