	file = { J Climate 2000 Roca.pdf:/Users/tyuan/Zotero/storage/3Q7567ND/J Climate 2000 Roca.pdf:application/pdf},
}

@article{korenAerosolcloudprecipitationSystemPredatorprey2011,
	title = {Aerosol-cloud-precipitation system as a predator-prey problem},
